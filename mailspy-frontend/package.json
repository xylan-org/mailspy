        "file-saver": "2.0.5",
        "inversify": "5.1.1",
        "inversify-react": "0.4.3",
        "mailparser": "3.2.0",
        "mime-types": "2.1.35",
        "raf": "3.4.1",
        "react": "17.0.2",
        "react-bootstrap": "1.6.6",
        "react-dom": "17.0.2",
        "reflect-metadata": "0.1.13"
    },
    "devDependencies": {
        "@craco/craco": "6.4.5",
        "@sinonjs/fake-timers": "7.1.2",
        "@types/enzyme": "3.10.12",
        "@types/escape-html": "1.0.2",
        "@types/file-saver": "2.0.5",
        "@types/jest": "26.0.24",
        "@types/jest-when": "2.7.4",
        "@types/mailparser": "3.4.0",
        "@types/mime-types": "2.1.1",
        "@types/node": "14.18.33",
        "@types/react": "17.0.52",
        "@types/react-dom": "17.0.18",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "@wojtekmaj/enzyme-adapter-react-17": "0.6.7",
        "babel-plugin-transform-typescript-metadata": "0.3.2",
        "enzyme": "3.11.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-output": "3.0.1",
        "jest": "26.6.3",
        "jest-mock-extended": "1.0.18",
        "jest-when": "3.5.2",
        "npm-check-updates": "13.1.5",
        "prettier": "2.7.1",
        "react-scripts": "4.0.3",
        "ts-jest": "26.5.6",
        "typescript": "4.7.4"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "homepage": ".",
    "jest": {
        "transform": {
            "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/test-utils/**",
            "!src/index.tsx",
            "!**/*.config.ts",
            "!**/*.d.ts"
        ],
        "coverageReporters": [
            "text-summary",
            "cobertura",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    }
