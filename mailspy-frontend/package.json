    "description": "Frontend module for MailSpy",
    "main": "index.tsx",
    "scripts": {
        "start": "craco start",
        "build": "craco build",
        "test": "craco test",
        "prettier-check": "prettier --check .",
        "prettier-apply": "prettier --write .",
        "eslint": "eslint-output \"**/*.ts\" \"**/*.tsx\" --max-warnings 0",
        "versions-check": "npm-check-updates --target minor"
    },
    "author": "xylan.org",
    "license": "MIT",
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "1.2.36",
